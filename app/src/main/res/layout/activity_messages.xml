<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMess"
    tools:context="com.mobilprog.tadam.mobilprog.MessagesActivity">


    <ImageView
        android:id="@+id/sender_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/input_message"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_send_black_24dp"
        tools:layout_editor_absoluteX="326dp"
        tools:layout_editor_absoluteY="400dp" />

    <ListView
        android:id="@+id/show_messages"
        android:layout_width="wrap_content"
        android:layout_height="443dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp" />

    <EditText
        android:id="@+id/input_message"
        android:layout_width="318dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/sender_button"
        android:hint="Type your message here..."
        android:inputType="textShortMessage"
        android:textColorHint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="9dp" />

</RelativeLayout>
