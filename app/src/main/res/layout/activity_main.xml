<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilprog.tadam.mobilprog.MainActivity">

    <Button
        android:id="@+id/Tibor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tibor"
        android:layout_below="@+id/Adam"
        />

    <Button
        android:id="@+id/Adam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adam"
        />

    <Button
        android:id="@+id/Martin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tibor"
        android:text="@string/martin"
        />

</RelativeLayout>
